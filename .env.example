# ==================== APPLICATION SETTINGS ====================
PROJECT_NAME="EduMosaic Backend API"
VERSION="2.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# ==================== API SETTINGS ====================
API_V1_STR="/api/v1"
API_V2_STR="/api/v2"

# ==================== SECURITY SETTINGS ====================
SECRET_KEY="your-secret-key-here-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
PASSWORD_MIN_LENGTH=8

# ==================== CORS SETTINGS ====================
# DO NOT MODIFY WITHOUT PERMISSION
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]
# For production, set specific origins:
# BACKEND_CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# ==================== DATABASE SETTINGS ====================
# Option 1: Use DATABASE_URL (recommended for production)
DATABASE_URL="postgresql+psycopg://user:password@localhost/edumosaic"

# Option 2: Use individual settings
POSTGRES_SERVER="localhost"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DB="edumosaic"

# Connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=True

# ==================== REDIS SETTINGS ====================
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD=""
REDIS_POOL_MAX_CONNECTIONS=10
REDIS_CACHE_TTL=3600
REDIS_ENABLED=True

# ==================== CLOUDINARY SETTINGS ====================
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
CLOUDINARY_ENABLED=True

# ==================== EMAIL SETTINGS ====================
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST="smtp.gmail.com"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAILS_FROM_EMAIL="noreply@edumosaic.com"
EMAILS_FROM_NAME="EduMosaic"
EMAILS_ENABLED=False

# ==================== SENTRY MONITORING ====================
SENTRY_DSN=""
SENTRY_ENVIRONMENT="production"
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ==================== RATE LIMITING ====================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT="200 per minute"
RATE_LIMIT_PER_IP="100 per minute"
RATE_LIMIT_AUTH="5 per minute"

# ==================== AI SETTINGS ====================
AI_ENABLED=True
AI_SERVICE_URL=""
AI_API_KEY=""
AI_MODEL="gpt-3.5-turbo"
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# ==================== GOOGLE RECAPTCHA ====================
RECAPTCHA_SECRET_KEY=""
RECAPTCHA_SITE_KEY=""
RECAPTCHA_ENABLED=False

# ==================== FILE UPLOAD SETTINGS ====================
MAX_UPLOAD_SIZE=10485760  # 10 MB
ALLOWED_IMAGE_EXTENSIONS=[".jpg", ".jpeg", ".png", ".gif", ".webp"]
ALLOWED_DOCUMENT_EXTENSIONS=[".pdf", ".doc", ".docx"]

# ==================== LOGGING SETTINGS ====================
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - [%(filename)s:%(lineno)d] - %(message)s"
LOG_FILE="logs/edumosaic.log"
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ==================== PAGINATION SETTINGS ====================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ==================== GAMIFICATION SETTINGS ====================
XP_PER_CORRECT_ANSWER=10
XP_PER_QUIZ_COMPLETION=50
XP_PER_LEVEL=1000
XP_BONUS_STREAK=5

# ==================== SECURITY HEADERS ====================
SECURITY_HEADERS_ENABLED=True

# ==================== MONITORING ====================
PROMETHEUS_ENABLED=True
PROMETHEUS_PORT=9090

# ==================== FEATURE FLAGS ====================
FEATURE_SOCIAL_LOGIN=False
FEATURE_PAYMENT=False
FEATURE_CHAT=False
FEATURE_VIDEO_QUIZ=False
FEATURE_AI_QUIZ_GENERATION=True
FEATURE_RECOMMENDATION_ENGINE=True